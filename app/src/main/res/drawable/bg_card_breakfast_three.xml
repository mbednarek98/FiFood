<?xml version="1.0" encoding="utf-8"?>
<!--  res/drawable/rounded_edittext.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle"
            android:padding="10dp">

            <gradient
                android:startColor="@color/palette_light_blue"
                android:endColor="@color/palette_pale_blue"
                android:angle="90" />

            <corners
                android:bottomRightRadius="10dp"
                android:bottomLeftRadius="10dp"
                android:topLeftRadius="10dp"
                android:topRightRadius="60dp" />
        </shape>
    </item>
    <item
        android:bottom="570dp"
        android:right="190dp"
        android:left="10dp"
        android:top="-50dp">

        <shape
            android:shape="rectangle">
            <solid android:color="@color/palette_gray" />
            <corners
                android:bottomRightRadius="120dp"
                android:bottomLeftRadius="120dp"
                android:topLeftRadius="120dp"
                android:topRightRadius="120dp" />
            <gradient
                android:startColor="@color/palette_pale_blue"
                android:endColor="@color/palette_gray"
                android:angle="90" />
        </shape>
    </item>

</layer-list>