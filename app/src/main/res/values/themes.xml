<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FitApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorEdgeEffect">@color/blueish</item>
    </style>

    <style name="Theme.FitApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/custom_progress_bar</item>
    </style>

    <style name="toolbarStyle" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="overflowStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:textColor">#000000</item>
        <item name="actionOverflowMenuStyle">@style/popupOverflowMenu</item>
    </style>

    <style name="popupOverflowMenu" parent="@style/Widget.MaterialComponents.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/overflow_menu_shape</item>
    </style>

    <style name="Theme.RemoveSplashScreenTheme" parent="@style/Theme.FitApp.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>